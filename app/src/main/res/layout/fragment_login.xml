<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentLogin"
    tools:context="layout.Login">

    <!-- TODO: Update blank fragment layout
    <TextView
        android:id="@+id/section_label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Login fragment" />
        -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Not logged in!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center"
            android:textIsSelectable="true"
            android:id="@+id/tvStatusTop" />

        <EditText
            android:layout_width="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etUsername"
            android:fontFamily="sans-serif"
            android:hint="Username"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:maxLines="1"
            android:padding="8dp"
            android:layout_height="40dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etPassword"
            android:fontFamily="sans-serif"
            android:hint="Password"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:maxLines="1"
            android:padding="8dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etOperator"
            android:hint="Name (optional)"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:maxLines="1"
            android:padding="8dp" />

        <Button
            android:text="LOGIN AND SYNCHRONIZE"
            android:layout_width="match_parent"
            android:onClick="OnLogin"
            android:id="@+id/btnLogin"
            android:layout_height="50dp" />

        <Button
            android:text="LOGOUT"
            android:layout_width="match_parent"
            android:onClick="OnLogout"
            android:id="@+id/btnLogout"
            android:layout_height="50dp"
            android:layout_weight="0" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutLoginInfo">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryLighest"
                android:layout_margin="5dp"
                android:layout_weight="0">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp">

                    <TextView
                        android:text="Operator:"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvOperatorLabel"
                        android:layout_weight="0" />

                    <TextView
                        android:text="Zoki"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvOperator"
                        android:layout_weight="1"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp">

                    <TextView
                        android:text="Username:"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvUsernameLabel"
                        android:layout_weight="0"
                        android:layout_width="100dp" />

                    <TextView
                        android:text="treskavec1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvUsername"
                        android:layout_weight="1"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_margin="3dp">

                    <TextView
                        android:text="Control Point:"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvControlPointLabel"
                        android:layout_weight="0" />

                    <TextView
                        android:text="Treskavec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvControlPoint"
                        android:layout_weight="1"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimaryDark"
                android:padding="5dp"
                android:layout_weight="0">

                <TextView
                    android:text="Race(s)"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/tvRacesLabel"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryLighest"
                    android:textSize="@dimen/fab_margin"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <TextView
                    android:text="Control Point(s)"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvControlPoint"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryLighest"
                    android:textSize="@dimen/activity_vertical_margin"
                    android:textAllCaps="true"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/lvRacesLogin"
            android:layout_weight="1"
            android:layout_height="wrap_content" />


    </LinearLayout>

</FrameLayout>
