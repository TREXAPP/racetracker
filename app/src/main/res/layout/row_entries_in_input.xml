<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutWrapper"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:layout_margin="10dp"
    android:background="@color/colorLightestGray"
    android:divider="@drawable/list_divider"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    app:layout_anchorGravity="center_vertical">

    <TextView
        android:id="@+id/tvBIB"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="222"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutName"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="3dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="2dp"
                android:paddingRight="3dp"
                android:text="Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLastName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_weight="0"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_vertical"
                android:text="LastName"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTime"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="3dp">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:format12Hour="hh:mm:ss a"
                android:format24Hour="hh:mm:ss"
                android:gravity="center_vertical"
                android:paddingLeft="2dp"
                android:text="14:23:51"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textSize="10sp"
                android:textStyle="bold" />
            <!--
            <TextView
                android:text="14:25:31"
                android:id="@+id/tvTime"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:textSize="10sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="fill"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="2dp" /> -->

            <LinearLayout
                android:id="@+id/layoutRacerInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="0"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:paddingLeft="3dp"
                android:paddingRight="3dp">

                <ImageView
                    android:id="@+id/ivSync"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    app:srcCompat="@android:drawable/ic_menu_upload_you_tube" />

                <TextView
                    android:id="@+id/tvCountry"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:text="MKD"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvGender"
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:text="M"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvAge"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="right"
                    android:text="32"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@color/colorPrimaryLighest"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/ibtEdit"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:scaleType="centerInside"
            app:srcCompat="@android:drawable/ic_menu_edit" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@android:color/holo_red_dark"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/ibtDelete"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:scaleType="centerInside"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    </LinearLayout>

</LinearLayout>